<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Artigos:</h2>
    <hr>
    <a class="btn btn-dark" href="/admin/articles/new">Criar nova artigo: </a>
    <br><br>

    <table class="table table-dark table-striped" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        
        <tbody>
            <% articles.forEach(article => { %>
            <tr>
                <th><%= article.id %></th>
                <th><%= article.title %></th>
                <th><%= article.slug %></th>
                <th><%= article.category.title %></th>
                <th>
                    <form method="POST" action="/articles/delete" style="display:inline;" onsubmit="confirmarDelecao(event, this)">
                        <input type="hidden" name="id" value="<%= article.id %>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </th>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('../../partials/footer.ejs') %>
<script>
    function confirmarDelecao(event, form){
    event.preventDefault();//impede que form seja submetido
    var decision = confirm("Você quer deletar este artigo?");
        if(decision){
            form.submit();
        }
    }
</script>